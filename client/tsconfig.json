{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "components/*": ["components/*"],
            "utilities/*": ["utilities/*"],
            "assets/*": ["assets/*"],
            "layouts/*": ["layouts/*"],
            "pages/*": ["pages/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src", "vite-env.d.ts"]
}
