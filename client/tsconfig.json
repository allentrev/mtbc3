{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "components": ["components/index"],
            "components/*": ["components/*"],
            "layouts": ["layouts/index"],
            "layouts/*": ["layouts/*"],
            "pages": ["pages/index"],
            "pages/*": ["pages/*"],
            "utilities": ["utilities/index"],
            "utilities/*": ["utilities/*"],
            "assets": ["assets/index"],
            "assets/*": ["assets/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src", "vite-env.d.ts"]
}
